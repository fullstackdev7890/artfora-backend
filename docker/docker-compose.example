version: '3.9'
services:
  ${proj_name}:
    image: ${proj_name}-${CI_COMMIT_SHORT_SHA}
    volumes:
      - ./:/app/
      - ./docker/php-fpm/php.ini-development:/usr/local/etc/php/php.ini-development
      - ./docker/php-fpm/php.ini-production:/usr/local/etc/php/php.ini-production
    container_name: ${proj_name}
    networks:
      - ${network_docker_name}
    restart: on-failure
  nginx:
    container_name: nginx
    image: nginx:1.20.1
    volumes:
      - ./docker/nginx/conf.d/:/etc/nginx/conf.d/
      - ./docker/nginx/nginx.conf:/etc/nginx/nginx.conf
      - /etc/letsencrypt/:/etc/letsencrypt
      - /home/${proj_name}:/home/${proj_name}
      - /var/log/nginx:/var/log/nginx
    ports:
      - 8085:80
    networks:
      - ${network_docker_name}
    restart: on-failure
    depends_on:
      - ${proj_name}
    restart: on-failure

networks:
  ${network_docker_name}:
    external: true



volumes:
 ${proj_name}-${CI_COMMIT_SHORT_SHA}:
   external: true

