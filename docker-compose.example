version: '3.9'
services:
  ${short_branch}-${CI_PROJECT_NAME}:
    image: ${short_branch}-${CI_PROJECT_NAME}-${CI_COMMIT_SHORT_SHA}
    volumes:
      - ${short_branch}-${CI_PROJECT_NAME}-${CI_COMMIT_SHORT_SHA}:/app/
      - ${short_branch}-pv-storage:/home/storage
      - ${short_branch}-pv-logs:/home/logs 
      - ./docker/php-fpm/php.ini-development:/usr/local/etc/php/php.ini-development
      - ./docker/php-fpm/php.ini-production:/usr/local/etc/php/php.ini-production
    container_name: ${short_branch}-${CI_PROJECT_NAME}
    restart: on-failure
    networks:
      - escort
  nginx:
    container_name: nginx
    image: nginx:1.20.1
    volumes:
      - ./docker/nginx/conf.d/:/etc/nginx/conf.d/
      - ./docker/nginx/nginx.conf:/etc/nginx/nginx.conf
      - /etc/letsencrypt/:/etc/letsencrypt
      - /home/dev-${CI_PROJECT_NAME}:/home/dev-esc/${CI_PROJECT_NAME}
      - /home/stg-${CI_PROJECT_NAME}:/home/stg-esc/${CI_PROJECT_NAME}
      - ${short_branch}-pv-storage:/home/storage
      - ${short_branch}-pv-logs:/home/logs 
      - /var/log/nginx:/var/log/nginx
    ports:
      - 443:443
      - 80:80
    networks:
      - escort
    restart: on-failure
    depends_on:
      - ${short_branch}-${CI_PROJECT_NAME}
    restart: on-failure

networks:
  escort:
    external: true

volumes:
 ${short_branch}-${CI_PROJECT_NAME}-${CI_COMMIT_SHORT_SHA}:
   external: true
 ${short_branch}-pv-storage:
   external: true
 ${short_branch}-pv-logs:
   external: true
